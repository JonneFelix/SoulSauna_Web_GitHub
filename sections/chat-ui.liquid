<!-- chat-ui.liquid -->
<div id="chat-wrapper">
  <!-- Dies ist der Container für die Chat-UI -->
  <div id="chat-container">
    <div id="chat-messages">
      <!-- Nachrichten werden hier angezeigt -->
    </div>
    <textarea id="chat-input" placeholder="Schreiben Sie eine Nachricht..."></textarea>
    <button id="chat-send">Senden</button>
  </div>
</div>



<!-- Styles für die Chat-UI -->
<style>
    /* Chat-Container-Positionierung und Styling */
  #chat-container {
  max-width: 1600px;
  margin: 0 auto; /* Zentriert den Container */
  padding: 50px;
  box-sizing: border-box;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

  /* Kopfzeile des Chat-Fensters */
#chat-header {
  padding: 15px;
  background-color: #5c6ac4;
  color: white;
  text-align: center;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

/* Chat-Nachrichten-Bereich */
#chat-messages {
  height: 300px;
  overflow-y: auto;
  padding: 10px;
  background-color: #f9f9f9;
}

/* Chat-Nachrichten Styling */
.chat-message {
  margin-bottom: 10px;
  line-height: 1.4;
  padding: 8px 12px;
  border-radius: 20px;
  background-color: #e8e8e8; /* Unterschiedliche Farben für eingehende/ausgehende Nachrichten */
  max-width: 80%;
}

/* Unterschiedliches Styling für ausgehende und eingehende Nachrichten */
.chat-message.outgoing {
  background-color: #b6defd;
  align-self: flex-end;
}

.chat-message.incoming {
  background-color: #e8e8e8;
  align-self: flex-start;
}

/* Eingabebereich */
#chat-input {
  border: none;
  padding: 15px;
  border-top: 1px solid #ddd;
}

/* Senden-Button */
#chat-send {
  background-color: #5c6ac4;
  color: white;
  padding: 12px 20px;
  text-align: center;
  border: none;
  border-radius: 0 0 8px 8px;
  cursor: pointer;
}
</style>


<!-- chat-ui.liquid -->
<div id="chat-wrapper">
  <!-- Dies ist der Container für die Chat-UI -->
  <div id="chat-container">
    <div id="chat-messages">
      <!-- Nachrichten werden hier angezeigt -->
    </div>
    <textarea id="chat-input" placeholder="Schreiben Sie eine Nachricht..."></textarea>
    <button id="chat-send">Senden</button>
  </div>
</div>



<!-- Styles für die Chat-UI -->
<style>
    /* Chat-Container-Positionierung und Styling */
  #chat-container {
  max-width: 1600px;
  margin: 0 auto; /* Zentriert den Container */
  padding: 50px;
  box-sizing: border-box;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

  /* Chat-Nachrichten-Bereich */
  #chat-messages {
    height: 340px;
    overflow-y: auto;
    margin-bottom: 10px;
    padding: 5px;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  /* Eingabebereich */
  #chat-input {
    padding: 10px;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  /* Senden-Button */
  #chat-send {
    background-color: #5c6ac4;
    color: white;
    padding: 10px 20px;
    text-align: center;
    border: none;
    border-radius: 8px;
    cursor: pointer;
  }
  #chat-wrapper {
    padding: 0 20px; /* Oder welcher Abstand auch immer benötigt wird */
  }
</style>

